- title(truncate(@other_cost.description, :length => 100))

%h1.main_heading
  = truncate(@other_cost.description, :length => 100)

  %span
    %ul.manage_bar.inline
      %li= link_to "Edit", edit_response_other_cost_path(@data_response, @other_cost)
      %li= link_to "Detail Cost Areas", activity_code_assignments_url(@other_cost)
      %li= link_to "X", response_other_cost_path(@data_response, @other_cost), :confirm => "Are you sure you want to delete this other cost?", :method => :delete

.wrap-70
  %h3.form_heading Basics
  %ul.dashboard_section
    %li
      %ul.row
        %li Project name
        %li= @other_cost.project.try(:name)
      %ul.row
        %li Description
        %li= @other_cost.description

  %h3.form_heading Past Expenditure
  %ul.dashboard_section
    %li
      %ul.row
        %li Spend
        %li= @other_cost.spend
      %ul.row
        %li Spend Q4 08-09
        %li= @other_cost.spend_q4_prev
      %ul.row
        %li Spend Q1 09-10
        %li= @other_cost.spend_q1
      %ul.row
        %li Spend Q2 09-10
        %li= @other_cost.spend_q2
      %ul.row
        %li Spend Q3 09-10
        %li= @other_cost.spend_q3
      %ul.row
        %li Spend Q4 09-10
        %li= @other_cost.spend_q4

  %h3.form_heading Budget (planned expenditure)
  %ul.dashboard_section
    %li
      %ul.row
        %li Budget
        %li= @other_cost.budget

  %h3.form_heading Classifications
  %ul.dashboard_section
    %li
      %ul.row
        %li Budget by Purposes
        %li= @other_cost.coding_budget_classified?
      %ul.row
        %li Budget by Locations
        %li= @other_cost.coding_budget_district_classified?
      %ul.row
        %li Budget by Inputs
        %li= @other_cost.coding_budget_cc_classified?
      %ul.row
        %li Spend by Purposes
        %li= @other_cost.coding_spend_classified?
      %ul.row
        %li Spend by Locations
        %li= @other_cost.coding_spend_district_classified?
      %ul.row
        %li Spend by Inputs
        %li= @other_cost.coding_spend_cc_classified?

= render :partial => 'shared/comments'
