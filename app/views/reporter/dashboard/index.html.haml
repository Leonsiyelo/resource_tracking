%h1.main_heading Dashboard

.first-half
  %h2
    =image_tag "icon_reporter.png", :class => "heading_icon"
    Data Requests & Responses
  .dashboard_section
    %table.modern_table
      %thead
        %tr
          %td Name
          %td Requestor
          %td Due
          %td Status
          %td
      %tbody
        = render :partial => 'request', :collection => @requests
        = render :partial => 'response', :collection => @data_responses

  %h2
    =image_tag "icon_lightning.png", :class => "heading_icon"
    Reports
  .dashboard_section
    %ul.admin_reports
      - if current_user.current_data_response
        %li
          - link_to reporter_response_path(current_user.current_data_response), :class => "drill_down target" do
            Review My Response
            %span.hint Interactive report of your current data response
      %li
        - link_to reports_districts_path, :class => "drill_down target" do
          Review District Expenditures and Budgets
          %span.hint Interactive reports
      %li
        - link_to reports_country_path, :class => "drill_down target" do
          Review National Expenditures and Budgets
          %span.hint Interactive reports
      %li
        - link_to reporter_reports_path, :class => "drill_down target" do
          All Reports
          %span.hint Export a report in CSV

.second-half
  %h2
    =image_tag"icon_comments.png", :class => "heading_icon"
    Recent Comments
  = render 'reporter/dashboard/comment_short_list', :comments => @comments

