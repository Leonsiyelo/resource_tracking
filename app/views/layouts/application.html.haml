!!! Strict
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title Hardcoded Title in App Layout
    = javascript_include_tag :defaults, 'jquery-1.4.2.min', 'jquery.collapsibleCheckboxTree', :cache => true
    = record_select_includes
    = active_scaffold_includes
    = stylesheet_link_tag 'compiled/active_scaffold_overrides.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = stylesheet_link_tag 'custom'
    = stylesheet_link_tag 'compiled/code_tree', :media => 'screen'
    = yield(:head)

  %body
    #header
      #logo
        = image_tag("logo.png", :alt => "Rwanda Resource Tracking Database")
      #admin
        %ul
          %li= link_to 'Dashboard', static_page_path(:ngo_dashboard)
          %li= link_to "logout", "#"

    #tabs
      %ul
        %li.active= link_to 'Projects', projects_path
        %li= link_to 'Funding Sources', funding_flows_path
        %li= link_to 'Providers', providers_path
        %li= link_to 'Activities', activities_path
        %li= link_to 'Other Costs', static_page_path(:ngo_dashboard)
        %li= link_to 'Submit', static_page_path(:ngo_dashboard)
      = image_tag "tagline.png"

    #content
      = render :partial => 'layouts/top_menu'

      #main

        - if flash[:notice]
          #notice= flash[:notice]
          
        #desc
          %h2 Description
          %p The border-radius mixin is used to give a block element rounded corners. It automatically outputs the correct vendor specific syntax for each browser (e.g. -webkit-border-radius and -moz-border-radius).
          %a read more
          // This is the description generator
          // .page_help
          //   = yield :page_help

        = yield

        .comments
          = yield :comments

      #sidebar

        
        #helper
          :javascript
            $('left_side_bar').hide();
          = yield :left_side_bar

      = render :partial => 'layouts/right_side_bar'

    #footer
      = render :partial => 'layouts/footer'