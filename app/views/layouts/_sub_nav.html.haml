#sub-nav
  %ul
    %li{ :class => (controller.class.to_s == "ResponsesController" && controller.action_name == 'edit' ? "active" : '')}
      = link_to 'Settings', edit_response_path(current_user.current_data_response || 1)

    %li{ :class => [["ProjectsController", "ActivitiesController"].include?(controller.class.to_s) ? "active" : '']}
      = link_to 'Projects', response_projects_path(@data_response)

    %li{ :class => (controller.class.to_s == "OtherCostsController" || @activity.class.to_s == 'OtherCost') ? "active" : ''}
      = link_to 'Other Costs', response_other_costs_path(@data_response)

    %li{ :class => (controller.class.to_s == "ResponsesController" && controller.action_name == "show" ? "active" : '')}
      = link_to 'Review', response_path(current_user.current_data_response || 1)

    %li{ :class => (controller.class.to_s == "ResponsesController" && controller.action_name == "review" ? "active" : '')}
      = link_to 'Submit', review_response_path(current_user.current_data_response || 1)
