- javascript "/ampie/swfobject.js"

= render 'shared/data_responses/javascript', :projects => @projects, :data_response => @data_response

%h2= "Response from #{@data_response.organization.name}"

%h3 Executive Summary

.simple_table
  %table
    %thead
      %th Projects
      %th Spend Total
      %th Budget Total
      %th Activities
      %th Sub Activities
      %th Spend Total
      %th Budget Total
      %th Unclassified Activities
    %tbody
      %tr
        %td= @data_response.projects.count
        %td= n2c @data_response.total_project_spend
        %td= n2c @data_response.total_project_budget
        %td= @data_response.activity_count
        %td= @data_response.sub_activity_count
        /TODO should we include other costs below? we are now
        %td= n2c @data_response.total_activity_spend
        %td= n2c @data_response.total_activity_budget
        %td= "#{@data_response.unclassified_activities_count} / #{@data_response.activity_count}"


.details_and_charts
  = render 'shared/data_responses/response_details'
  = render 'shared/data_responses/data_responses_charts', :data_response => @data_response


#data_response_sub_tabs.tabs_nav
  %ul.inline_alt_tab
    %li{:class => 'selected' }= link_to "Comments (#{@data_response.comments.count})", "#", :class => "comment_details"
    %li= link_to "Projects (#{@projects.count})", "#", :id => "project_details"
    %li= link_to "Activities without a Project (#{@activities_without_projects.count})", "#", :class => "activity_details"

.tabs
  .tab1
    = render 'shared/data_responses/comments', :commentable => @data_response
  .tab2
    = render 'shared/data_responses/projects', :projects => @projects
  .tab3
    = render 'shared/data_responses/activities', :activities => @activities_without_projects, :non_linked => true

