.tabs.two-thirds
  .tab1
    %ul.compact_tab
      %li.mtef_budget_pie.selected= link_to "Pie", "#"
      %li.mtef_budget_tree= link_to "Tree Map", "#"

    .pie
      .chart{:id => "dr_#{data_response.id}_mtef_budget"}
    .tree
      .chart{:id => "dr_#{data_response.id}_mtef_budget_tree"}
        = render '/shared/data_responses/mtef_budget_tree_chart'

  .tab2
    .pie
      .chart{:id => "dr_#{data_response.id}_mtef_spend"}

    .tree
      = render '/shared/data_responses/mtef_budget_tree_chart'

  .tab3
    .chart{:id => "dr_#{data_response.id}_nsp_budget"}

  .tab4
    .chart{:id => "dr_#{data_response.id}_nsp_spend"}

  .tab5
    .chart{:id => "dr_#{data_response.id}_budget_stratprog_coding"}

  .tab6
    .chart{:id => "dr_#{data_response.id}_budget_stratobj_coding"}

  .tab7
    .chart{:id => "dr_#{data_response.id}_spend_stratprog_coding"}

  .tab8
    .chart{:id => "dr_#{data_response.id}_spend_stratobj_coding"}
