/ js event: .resources, .comments
.comments
  %div{:class => "resources", :"data-resources" => "comments", :style => "clear: both"}
    .simple_table
      %table.dashboard_comments
        %thead
          %tr
            %th
              = "Comments (<span class='count'>#{commentable.comments.size}</span>)"

            %th Comment
            %th Author
            %th.manage Manage
        %tbody
          = render :partial => 'reporter/comments/row', :collection => commentable.comments, :as => :comment
    .placer
    %ul.actions
      / js event: .new_btn, .enabled
      %li= link_to "+ Add Comment", new_reporter_comment_path(:commentable_type => commentable.class.name, :commentable_id => commentable.id), :class => "new_btn enabled"
