= error_messages_for :edit, :header_message  => nil, :message => "Oops, we couldn't save your changes."

- form_for @user, :url => profile_path do |f|
  %table
    %tbody
      %tr
        %td= f.label :username
        %td= f.text_field :username
      %tr
        %td= f.label :email
        %td= f.text_field :email
      %tr
        %td= f.label :password
        %td= f.text_field :password
      %tr
        %td= f.label :password_confirmation
        %td= f.text_field :password_confirmation
  = submit_tag 'Save'
