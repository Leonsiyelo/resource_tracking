%tbody
  %tr.head
    %td
      %h1= link_to "#{h project.name}", edit_response_project_path(@response, project)
    %td= n2cndrs(project.spend, project.currency)
    %td= n2cndrs(project.budget, project.currency)
    %td.wrap-10
      - link_to edit_response_project_path(@response, project), :class => 'create_inline right' do
        = image_tag "pencil_10.png"
        edit
  = render 'activities', :heading => "Activities", :response => @response, :project => project, :activities => project.normal_activities
  = render 'activities', :heading => "Other Costs", :response => @response, :project => project, :activities => project.other_costs
