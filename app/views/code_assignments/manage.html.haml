- content_for :head do
  = javascript_include_tag 'jquery.collapsibleCheckboxTree', :cache => true
  = stylesheet_link_tag 'compiled/code_tree', :media => 'screen'

  :javascript
    jQuery(document).ready(function(){
      jQuery('ul#activity_tree').collapsibleCheckboxTree({initialState : 'collapse'});
    });

%h2 Activity Classification

- form_for @activity, :url => update_code_assignments_path, :method => :post do |form|

  -# Take this out later
  = hidden_field_tag :activity_id, @activity.id

  %ul#activity_tree
    %li.activity
      = "#{@activity.name} - $#{@activity.expected_total}" #TODO currency symbol from data request
      %ul{:id => @activity.id}
        - Code.roots.each do |code|
          - if [Mtef, Nha, Nasa, Nsp].index(code.class) #TODO move out to model
            = render :partial => 'code_row', :locals => {:code => code, :form => form}
  = submit_tag 'Save'
