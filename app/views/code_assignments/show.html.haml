:javascript
  var _activity_id = "#{@activity.id}";

= render 'layouts/active_scaffold_js'

%ul.breadcrumb
  %li= link_to "Activities", response_activities_path(@data_response)
  %li= link_to @activity.name.first(16), response_activity_path(@data_response, @activity)

%h1 Activity Classification

#classification

  .nav2
    = render 'tab_nav', :activity => @activity

  = render 'code_assignments/activity_description', :activity => @activity

  #activity_classification
    - if @activity.data_request.budget?
      %div.tab1{:style => 'display: block'}= image_tag('ajax-loader.gif')
      %div.tab2= image_tag('ajax-loader.gif')
      %div.tab3= image_tag('ajax-loader.gif')
    - if @activity.data_request.spend?
      - spend_style = ((!@activity.data_request.budget? && @activity.data_request.spend?) ? 'display: block' : nil)
      %div.tab4{:style => spend_style}= image_tag('ajax-loader.gif')
      %div.tab5= image_tag('ajax-loader.gif')
      %div.tab6= image_tag('ajax-loader.gif')
