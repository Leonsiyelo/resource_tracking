:javascript
  var _activity_id = "#{@activity.id}";

- content_for :sub_nav do
  = render :partial => 'layouts/sub_nav'

.nav2
  %h2= "Activity Classification"
  %ul
    %li{:id => 'tab1', :class => 'selected'}
      = link_to "Budget by Coding", "#"
    %li{:id => 'tab2'}
      = link_to "Budget by District", "#"
    %li{:id => 'tab3'}
      = link_to "Budget Cost Categorization", "#"
    %li{:id => 'tab4'}
      = link_to "Expenditure by Coding", "#"
    %li{:id => 'tab5'}
      = link_to "Expenditure by District", "#"
    %li{:id => 'tab6'}
      = link_to "Expenditure Cost Categorization", "#"

= render :partial => 'code_assignments/activity_description'

#activity_classification
  %div.tab1
    = render 'tab', { :coding_type => @coding_type, :activity => @activity, :codes => @codes, :tab => 'tab1' }
  %div.tab2
  %div.tab3
  %div.tab4
  %div.tab5
  %div.tab6
