:javascript
  var _activity_id = "#{@activity.id}";

= render 'breadcrumb', :response => @data_response, :activity => @activity

- type = 'Spend'
- if @coding_type == "CodingBudget"
  - type = 'Budget'

%h1.main_heading
  = "#{@activity.class.to_s.underscore.humanize.titleize} #{type}"

.main_heading
  = render 'help'

= render 'activities/tab_nav', :activity => @activity

#classification
  %table#activity_description


    - amount = @activity.spend
    - amount = @activity.budget if @coding_type == "CodingBudget"
    %tr
      %td= "#{type} Amount:"
      %td= c(amount, @activity.currency)

    = render  '/code_assignments/progress_bar', :activity => @activity

    - if current_user.admin? || current_user.activity_manager?
      %tr
        %td.title= label_tag :approve_activity, "Approved?"
        %td= check_box_tag :approve_activity, true, @activity.approved, :class => "approve_activity", :"data-id" => @activity.id, :"data-response_id" => @activity.data_response.id


  = render 'tab_nav', :activity => @activity

  #activity_classification
    %div.tab1{:style => 'display: block'}
      = render 'tab'
