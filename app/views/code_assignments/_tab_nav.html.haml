- other_costs = false unless other_costs

%ul.inline_tab

  - if get_coding_type(params[:coding_type]) == :budget
    %li{:class => tab_class(activity, 'CodingBudget')}
      = link_to "Purposes", activity_code_assignments_path(activity, :coding_type => 'CodingBudget')

    - unless other_costs
      %li{:class => tab_class(activity, 'CodingBudgetDistrict')}
        = link_to "Locations", activity_code_assignments_path(activity, :coding_type => 'CodingBudgetDistrict')

    %li{:class => tab_class(activity, 'CodingBudgetCostCategorization')}
      = link_to "Inputs", activity_code_assignments_path(activity, :coding_type => 'CodingBudgetCostCategorization')

    %li{:class => tab_class(activity, 'ServiceLevelBudget')}
      = link_to "Service Levels", activity_code_assignments_path(activity, :coding_type => 'ServiceLevelBudget')

  - if get_coding_type(params[:coding_type]) == :spend
    %li{:class => tab_class(activity, 'CodingSpend')}
      = link_to "Purposes", activity_code_assignments_path(activity, :coding_type => 'CodingSpend')

    - unless other_costs
      %li{:class => tab_class(activity, 'CodingSpendDistrict')}
        = link_to "Locations", activity_code_assignments_path(activity, :coding_type => 'CodingSpendDistrict')

    %li{:class => tab_class(activity, 'CodingSpendCostCategorization')}
      = link_to "Inputs", activity_code_assignments_path(activity, :coding_type => 'CodingSpendCostCategorization')

    %li{:class => tab_class(activity, 'ServiceLevelSpend')}
      = link_to "Service Levels", activity_code_assignments_path(activity, :coding_type => 'ServiceLevelSpend')
