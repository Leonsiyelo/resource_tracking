- other_costs = false unless other_costs

%ul.inline_tab
  %li Budget:

  - style = activity.budget_coded? ? 'selected' : 'selected incomplete'
  %li{:id => 'tab1', :class => style }= link_to "Coding", "#"

  - unless other_costs
    - style = activity.budget_by_district_coded? ? '' : 'incomplete'
    %li{:id => 'tab2', :class => style}= link_to "District", "#"

  - style = activity.budget_by_cost_category_coded? ? '' : 'incomplete'
  %li{:id => 'tab3', :class => style}=   link_to "Cost Categorization", "#"

  %li Expenditure:

  - style = activity.spend_coded? ? '' : 'incomplete'
  %li{:id => 'tab4', :class => style}=   link_to "Coding", "#"

  - unless other_costs
    - style = activity.spend_by_district_coded? ? '' : 'incomplete'
    %li{:id => 'tab5', :class => style}= link_to "District", "#"

  - style = activity.spend_by_cost_category_coded? ? '' : 'incomplete'
  %li{:id => 'tab6', :class => style}=   link_to "Cost Categorization", "#"