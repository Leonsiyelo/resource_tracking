- other_costs = false unless other_costs

%ul.inline_tab

  - if activity.data_request.budget?
    %li Budget:

    - style = activity.coding_budget_classified? ? 'selected' : 'selected incomplete'
    %li{:id => 'tab1', :class => style }= link_to "Coding", "#"

    - unless other_costs
      - style = activity.coding_budget_district_classified? ? '' : 'incomplete'
      %li{:id => 'tab2', :class => style}= link_to "District", "#"

    - style = activity.coding_budget_cc_classified? ? '' : 'incomplete'
    %li{:id => 'tab3', :class => style}=   link_to "Cost Categorization", "#"

  - if activity.data_request.spend?
    - spend_class = ((!activity.data_request.budget? && activity.data_request.spend?) ? 'selected' : nil)
      
    %li Expenditure:

    - style = activity.coding_spend_classified? ? spend_class : 'incomplete'
    %li{:id => 'tab4', :class => style}=   link_to "Coding", "#"

    - unless other_costs
      - style = activity.coding_spend_district_classified? ? '' : 'incomplete'
      %li{:id => 'tab5', :class => style}= link_to "District", "#"

    - style = activity.coding_spend_cc_classified? ? '' : 'incomplete'
    %li{:id => 'tab6', :class => style}=   link_to "Cost Categorization", "#"
