
%tr
  %td Classification progress:
  %td
    .progress-container
      - style = ''
      - style = "background: orange" if activity.coding_progress < 70
      - style = "background: #973030" if activity.coding_progress < 30
      - style = style + "; width: #{activity.coding_progress}%"
      %div{:style => style}
    = link_to "?", "#", :title => 'Indicates the completeness of your Budget & Spend classifications for this activity', :class => "tooltip"