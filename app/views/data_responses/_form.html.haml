- editing = controller.action_name == 'edit' ? true : false
- button_text =  editing ? "Update Response" : "Begin Response"
%h2 Enter general information and start the response
.dashboard_section
  .form_aside
    %p Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullamcorper suscipit lobortis nisl ut aliquip ex ea commodo consequat.
  - f.inputs :class => 'wrap-80 inputs' do
    %li.last
      %h3 Basics
    = f.input :data_request_id, :as => :select, :collection => @requests, :include_blank => false, :label => "Data Request", :hint => "The request you are responding to."
    = f.input :currency, :label => "Default Currency", :as => :select, :collection => currency_options_for_select, :include_blank => true, :hint => "You can override the currency for individual projects if you like."
    = f.input :fiscal_year_start_date, :as => :string, :label => "Start of Fiscal Year", :input_html => {:class => 'date_picker'}
    = f.input :fiscal_year_end_date, :as => :string, :label => "End of Fiscal Year", :input_html => {:class => 'date_picker'}, :hint => "The Fiscal Year (FY) that you wish to report in. This may correspond to the FY of your organization, donors, country etc."
    %li.last
      %h3 Contact Details
    = f.input :contact_name, :as => :string, :hint =>"a primary contact at your organization that will help the resource tracking team if there are any questions throughout the process."
    = f.input :contact_position, :as => :string
    = f.input :contact_phone_number, :as => :string, :label => "Phone number"
    = f.input :contact_main_office_phone_number, :as => :string, :label => "Office number"
    = f.input :contact_office_location, :as => :string, :label => "Office location"

  - f.buttons :class => 'wrap-80 buttons' do
    = f.commit_button button_text, :class => "last"
  
