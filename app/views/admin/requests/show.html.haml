%h2= "Data request: #{@request.title}"
%table
  %tr
    %td Title:
    %td= @request.title
  %tr
    %td Organization:
    %td= @request.organization.try(:name)
  %tr
    %td Complete:
    %td= @request.complete
  %tr
    %td Pending review:
    %td= @request.pending_review


= link_to 'Edit', edit_admin_request_path(@request)
= link_to "Delete", admin_request_path(@request), :method => :delete, :confirm => "Are you sure?"
