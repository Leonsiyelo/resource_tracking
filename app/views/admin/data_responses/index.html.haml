.simple_table
  %h3="Empty Data Responses (#{@empty_data_responses.size})"
  - if @empty_data_responses.empty?
    %p All data responses have been started.
  - else
    %table
      %thead
        %tr
          %th Organization
          %td User Emails
          %td Point of Contact Phone Number
          %td
      %tbody
        - @empty_data_responses.each do |data_response|
          %tr
            %th= data_response.responding_organization
            %td= data_response.responding_organization.user_email_list_limit_3
            %td= data_response.contact_phone_number
            %td= link_to "Delete Response", [:admin, data_response], :confirm => "Are you sure?", :method => :delete
.simple_table
  %h3="In Process Data Responses (#{@in_progress_data_responses.size})"
  - if @in_progress_data_responses.empty?
    %p No data responses are in progress.
  - else
    %table
      %thead
        %tr
          %th Organization
          %td Projects
          %td Spend Total
          %td Budget Total
          %td Activities
          %td Sub Activities
          %td Spend Total
          %td Budget Total
          %td Unclassified Activities
          %td
      %tbody
        - @in_progress_data_responses.each do |data_response|
          %tr
            %th= data_response.responding_organization
            %th= data_response.projects.count
            %th= data_response.projects.inject(0) {|sum,p| p.spend.nil? ? sum : sum + p.spend}
            %th= data_response.projects.inject(0) {|sum,p| p.budget.nil? ? sum : sum + p.budget}
            %th= data_response.activity_count
            %th= data_response.sub_activity_count
            %th= data_response.total_activity_spend
            %th= data_response.total_activity_budget
            %th= data_response.unclassified_activities_count
            %th
.simple_table
  %h3="Submitted data responses for review (#{@submitted_data_responses.size})"

  - if @submitted_data_responses.empty?
    %p No submitted data responses are waiting for review.
  - else
    %table
      %thead
        %tr
          %th Organization
          %td Date/time submitted
          %td Total budget
          %td Total spend
      %tbody
        - @submitted_data_responses.each do |data_response|
          %tr
            %th= data_response.responding_organization
            %th= data_response.submitted_at
            %th
            %th
