- javascript "/ampie/swfobject.js"

:javascript
  _projects = #{@projects.map(&:id).to_json};
  _dr_id = "#{@data_response.id}";

/%h2= "#{@data_response.data_request.title}: response from #{@data_response.organization.name}"
%h2= "Response from #{@data_response.organization.name}"

%h3 Executive Summary

.simple_table
  %table
    %thead
      %th Projects
      %th Spend Total
      %th Budget Total
      %th Activities
      %th Sub Activities
      %th Spend Total
      %th Budget Total
      %th Unclassified Activities
    %tbody
      %tr
        %td= @data_response.projects.count
        %td= n2c @data_response.total_project_spend
        %td= n2c @data_response.total_project_budget
        %td= @data_response.activity_count
        %td= @data_response.sub_activity_count
        %td= n2c @data_response.total_activity_spend
        %td= n2c @data_response.total_activity_budget
        %td= "#{@data_response.unclassified_activities_count} / #{@data_response.activity_count}"

= render 'shared/data_responses/form'

.tabs_nav.two-thirds

  %ul.compact_tab
    %li MTEF
    %li{:id => 'tab1', :class => 'selected'}
      = link_to "Budget", "#"
    %li{:id => 'tab2'}
      = link_to "Spend", "#"
    %li NSP
    %li{:id => 'tab3'}
      = link_to "Budget", "#"
    %li{:id => 'tab4'}
      = link_to "Spend", "#"
    %li HSSPII Budget
    %li{:id => 'tab5'}
      = link_to "Program", "#"
    %li{:id => 'tab6'}
      = link_to "Objective", "#"
    %li HSSPII Spend
    %li{:id => 'tab7'}
      = link_to "Program", "#"
    %li{:id => 'tab8'}
      = link_to "Objective", "#"

.tabs.two-thirds
  .tab1
    .chart{:id => "dr_#{@data_response.id}_mtef_budget"}
      %strong You need to upgrade your Flash Player

  .tab2
    .chart{:id => "dr_#{@data_response.id}_mtef_spend"}
      %strong You need to upgrade your Flash Player

  .tab3
    .chart{:id => "dr_#{@data_response.id}_nsp_budget"}
      %strong You need to upgrade your Flash Player

  .tab4
    .chart{:id => "dr_#{@data_response.id}_nsp_spend"}
      %strong You need to upgrade your Flash Player

  .tab5
    .chart{:id => "dr_#{@data_response.id}_budget_stratprog_coding"}
      %strong You need to upgrade your Flash Player

  .tab6
    .chart{:id => "dr_#{@data_response.id}_budget_stratobj_coding"}
      %strong You need to upgrade your Flash Player

  .tab7
    .chart{:id => "dr_#{@data_response.id}_spend_stratprog_coding"}
      %strong You need to upgrade your Flash Player

  .tab8
    .chart{:id => "dr_#{@data_response.id}_spend_stratobj_coding"}
      %strong You need to upgrade your Flash Player

.full
  = link_to "Show/hide details...", "#", :id => "details", :class => 'like_a_h3'

  .simple_table
    = render 'shared/data_responses/projects', :projects => @projects

  %h3 Activities not linked with a Project
  .simple_table
    = render 'shared/data_responses/activities', :activities => @activities_without_projects
