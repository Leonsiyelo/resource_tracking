
- javascript "/ampie/swfobject.js"

= render 'shared/data_responses/javascript', :projects => @projects, :data_response => @data_response

/%h2= "#{@data_response.data_request.title}: response from #{@data_response.organization.name}"
%h2= "Response from #{@data_response.organization.name}"

%h3 Executive Summary

.simple_table
  %table
    %thead
      %th Projects
      %th Spend Total
      %th Budget Total
      %th Activities
      %th Sub Activities
      %th Spend Total
      %th Budget Total
      %th Unclassified Activities
    %tbody
      %tr
        %td= @data_response.projects.count
        %td= n2c @data_response.total_project_spend
        %td= n2c @data_response.total_project_budget
        %td= @data_response.activity_count
        %td= @data_response.sub_activity_count
        %td= n2c @data_response.total_activity_spend
        %td= n2c @data_response.total_activity_budget
        %td= "#{@data_response.unclassified_activities_count} / #{@data_response.activity_count}"

= render 'shared/data_responses/form'

= render 'shared/data_responses/data_responses_charts', :data_response => @data_response

.two-thirds
  = render :partial => 'test_chart'

.full
  = link_to "Show/hide details...", "#", :id => "details", :class => 'like_a_h3'

  .simple_table
    = render 'shared/data_responses/projects', :projects => @projects

  %h3 Activities not linked with a Project
  .simple_table
    = render 'shared/data_responses/activities', :activities => @activities_without_projects
